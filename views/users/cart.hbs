<section id="cart">
    <table width="100%">
        <thead>
            <tr>
                <td>Remove</td>
                <td>Image</td>
                <td>Product</td>
                <td>Size</td>
                <td>Quantity</td>             
                <td>Price</td>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td><button class="remove" onclick="removeProduct('{{this._id}}','{{this.product._id}}')" ><i class="far fa-times-circle"></i></button></td>
                <td><img onclick=" window.location.href='/single-product/{{this.product._id}}'" src="product-images/{{this.product._id}}.jpg" alt=""></td>
                <td>{{this.product.Name}}</td>
                <td>{{this.size}}</td>
                <td>
                    <button class="quantity" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)">-</button>
                    <span id="{{this.product._id}}">{{this.quantity}}</span>
                    <button class="quantity" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)">+</button>
                </td>
                <td>{{this.product.Price}}</td>  
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>

<section id="cart-add">
    <div id="coupon">
        <h3>Apply Coupon</h3>
        <div>
            <input type="text" placeholder="Enter Your Coupon">
            <button>Apply</button>
        </div>
    </div>

    <div id="subtotal">
        <h3>Cart Totals</h3>
        <table>
            <tr>
                <td>Cart Subtotal</td>
                <td>Rs : <span id="totalsum">{{totalSum}}</span></td>
            </tr>
            <tr>
                <td>Shipping</td>
                <td>Free</td>           
            </tr>
            <tr>
                <td><strong>Total</strong></td>
                <td><strong>Rs : <span id="totalsum">{{totalSum}}</span></strong></td>
            </tr>
        </table>
        <a href="/place-order">PLACE ORDER</a>
    </div>
</section>




