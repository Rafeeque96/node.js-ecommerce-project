<div class="container">
 <div class="small-container cart-page">
    <table class="cart-table">
        <tr>
            <th class="cart-head">Product</th>
            <th class="cart-head">Quantity</th>
            <th class="cart-head">Price</th>
        </tr>
        {{#each products}}
        <tr>   
            {{#each this.product}}       
            <td class="cart-td">
                <div class="cart-info">
                    <img class="cart-img"  src="product-images/{{this._id}}.jpg" alt="">
                    <div>
                        <p>{{this.Name}}</p>
                        <small>Size : {{this.Size}}</small>
                        <br>
                        <button class="cart-remove">Remove</button>
                    </div>
                </div>
            </td>
             {{/each}} 
            <td class="cart-count">
                <button class="cart-item-count mr-2">-</button>{{this.quantity}}<button class="cart-item-count ml-2">+</button>
            </td>
             {{#each this.product}}      
            <td>{{this.Price}}</td>
               {{/each}}  
        </tr>
        {{/each}}
    </table>
    <div class="total-price">
        <table>
            <tr>
                <td>Total : </td>
                <td> Rs . 200</td>
            </tr>
        </table>
    </div>
 </div>
</div>