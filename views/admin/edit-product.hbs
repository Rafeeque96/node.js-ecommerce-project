<section id="add-pro">
    <form action="/admin/edit-product/{{product._id}}"  enctype="multipart/form-data" method="post">
         <div class="address-details">
               <h3>Edit Product</h3>
            <div>
                <input type="text" id="fname" name="name"  placeholder="Product Name" value="{{product.name}}"><br>
                <input type="text" id="lname" name="stock" placeholder="No Of Stock"  value="{{product.stock}}"><br>
                <input type="text" id="house" name="about" placeholder="Write About Product" value="{{product.about}}"><br>
                <input type="text" id="town" name="price"  placeholder="Product Price" value="{{product.price}}"><br> 
           </div>
      </div>

    <div class="select">
             <div class="brand">
               <select name="brand" id="">
                 <option value="">{{product.brand}}</option>
                 {{#each brand}}
                 <option value="{{this.Name}}">{{this.Name}}</option>
                 {{/each}}
               </select>

             </div>

             <div class="cat">
               <select name="Mcategory" id="">
                 <option value="">{{product.Mcategory}}</option>
                 {{#each category}}
                 <option value="{{this.category}}">{{this.category}}</option>
                 {{/each}}
               </select>

             </div>

             <div class="subcat">
               <select name="Scategory" id="">
                 <option value="">Sub Category</option>
                {{#each category}}
                 <option value="">{{this.Scategory}}</option>
                 {{/each}}        
               </select>

             </div>
           </div> 

            <div class="pro-img">
              <div class="img1">
                <input type="file" name="img1" onchange="viewImage1(event)">
                <img src="/product-images/{{product._id}}a.jpg" alt="" id="imgview1">
                
              </div>

              <div class="img2">
                  <input type="file" name="img2" onchange="viewImage2(event)">
                <img src="/product-images/{{product._id}}b.jpg" alt="" id="imgview2">
                

              </div>

              <div class="img3">
                  <input type="file" name="img3" onchange="viewImage3(event)">
                <img src="/product-images/{{product._id}}c.jpg" alt="" id="imgview3">

              </div>

              <div class="img4">
                  <input type="file" name="img4" onchange="viewImage4(event)">
                <img src="/product-images/{{product._id}}d.jpg" alt="" id="imgview4">

              </div>
            </div>

             <div class="add-btn">
                <button type="submit">Update</button>
                </div>

    </form>
</section>

<script>
    function viewImage1(event) {
        document.getElementById('imgview1').src=URL.createObjectURL(event.target.files[0])
    }
    function viewImage2(event) {
        document.getElementById('imgview2').src=URL.createObjectURL(event.target.files[0])
    }
    function viewImage3(event) {
        document.getElementById('imgview3').src=URL.createObjectURL(event.target.files[0])
    }
    function viewImage4(event) {
        document.getElementById('imgview4').src=URL.createObjectURL(event.target.files[0])
    }
</script> 
